{
  "name": "claude-code-hub",
  "displayName": "ClaudeCodeHUB",
  "description": "VS Code integration for Claude Code CLI",
  "version": "0.1.7",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/OleynikAleksandr/claude-code-hub.git"
  },
  "bugs": {
    "url": "https://github.com/OleynikAleksandr/claude-code-hub/issues"
  },
  "homepage": "https://github.com/OleynikAleksandr/claude-code-hub#readme",
  "activationEvents": [],
  "main": "./out/extension_v2.js",
  "contributes": {
    "commands": [
      {
        "command": "claudeBridge.start",
        "title": "Start Claude Bridge",
        "icon": "$(play)"
      },
      {
        "command": "claudeBridge.stop",
        "title": "Stop Claude Bridge",
        "icon": "$(stop)"
      },
      {
        "command": "claudeBridge.openPanel",
        "title": "Open Claude Bridge Panel",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "claudeBridge.diagnose",
        "title": "Claude Bridge: Diagnostics",
        "icon": "$(pulse)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-bridge",
          "title": "Claude Bridge",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "claude-bridge": [
        {
          "type": "webview",
          "id": "claudeBridge.chatView",
          "name": "Claude Chat"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package --out ./bin/"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1"
  }
}
